.modal {
	display: block;
	opacity: 0;
	position: fixed;
	right: 0px;
	left: 0px;
	top: 0px;
	bottom: 0px;
	background-color: rgba(163,163,163,0.8);
	pointer-events: none;
	z-index: 9999;
	padding: 5px;
	overflow: auto;
}

	.modal > div {
		position: relative;
		margin: auto;
		min-width: 240px;
		max-width: 480px;
		padding: 5px;
		margin-top: 50px;
		background-color: #EAEAEA;
		border-radius: 15px;
		-webkit-box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.67);
		-moz-box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.67);
		box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.67);
	}

	.socialConnect li {
		width: calc(45% - 65px);
		margin: 0px 2px 0px 2px;
	}