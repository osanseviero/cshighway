<!-- Crear cuenta -->
<%if @user %>
	<%if !@user.errors.empty? %>
		<div class="alert alert-danger">
			<ul class="list-unstyled">
				<% @user.errors.each do |attr, msg|%>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<%end%>
<%end%>

<%= form_for User.new do |u| %>
	<div class="form-group">
		<%= u.label :name , class: "sr-only"%>
		<%= u.text_field :name, class: "form-control", placeholder: "Usuario" %>
	</div>
	<div class="form-group">
		<%= u.label :mail , class: "sr-only"%>
		<%= u.text_field :mail , class: "form-control", placeholder: "Correo electrónico", type: "email"%>
	</div>
	<div class="form-group">
		<%= u.label :Password , class: "sr-only"%>
		<%= u.password_field :password , class: "form-control", placeholder: "Contraseña" %>
	</div>
	<div class="form-group">
		<%= u.label :Confirm_Password , class: "sr-only"%>
		<%= u.password_field :password_confirmation , class: "form-control", placeholder: "Confirmar Contraseña" %>
	</div>
	<div class="form-group">
		<%= u.submit "Regístrame", class: "btn btn-orange"%>
	</div>
<% end %>