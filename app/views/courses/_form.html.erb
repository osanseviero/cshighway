<% if !@course.errors.empty? %>
   <div class = "alert alert-danger">
      <ul class="list-unstyled">
         <% @course.errors.full_messages.each do |msg| %>
            <li><%= msg %></li> 
         <% end %>
      </ul>
   </div>
<% end %>

<%= form_for @course, html: { multipart: true} do |f| %>
   <div class="form-group">
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, placeholder: "Nombre del curso", class: "form-control" %>
   </div>
   <div class="form-group">
      <%= f.label :description, class: "sr-only" %>
      <%= f.text_field :description, placeholder: "DescrpciÃ³n del curso", class: "form-control" %>
   </div>
   <div class="form-group">
      <%= f.label :attachment, class: "sr-only" %>
      <%= f.file_field :attachment %>
   </div>
   <div class="form-group">
      <%= f.submit "Guardar", class: "btn btn-primary" %>
   </div>
<% end %>