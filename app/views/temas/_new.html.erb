<%= form_for([@course, Tema.new], html: {class: "form-inline", role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :name , class: "sr-only"%>
    <%= f.text_field :name, class: "form-control", placeholder: "Tema" %>
  </div>
  <div class="form-group">
    <%= f.submit "Crear tema", class: "btn btn-default", type: "submit" %>
  </div>
<% end %>