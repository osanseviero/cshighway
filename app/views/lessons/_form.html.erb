<% if !@lesson.errors.empty? %>
   <div class= "alert alert-danger">
      <ul class= "list-unstyled">
         <% @lesson.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
   </div>
<% end %>

<%= form_for([@course, @lesson]) do |f| %>
   <div class="form-group">
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, placeholder: "Nombre de la lección", class: "form-control" %>
   </div>
   <div class="form-group">
      <%= f.label :content, class: "sr-only" %>
      <%= f.cktext_area :content, placeholder: "Descrpción del curso", class: "form-control", rows: 10 %>
   </div>
   <div class="form-group">
      <%= f.submit "Guardar", class: "btn btn-primary" %>
   </div>
<% end %>