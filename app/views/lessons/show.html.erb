<div class="course-orange lesson-color"></div>
<div class="container">
	<ul class="pager">
		<% if @lesson.prev != nil %>
			<li class="previous"><%= link_to "<span aria-hidden=\"true\">&larr;</span> Lección anterior".html_safe, course_lesson_path(@course, @lesson.prev)%></li>
		<% else %>
			<li class="previous disabled"><a href=""><span aria-hidden="true">&larr;</span> Lección anterior</a></li>
		<%end%>
		<li><%= link_to "Todas las lecciones", course_path(@course)%></li> 
		<% if @lesson.next != nil %>
			<li class="next"><%= link_to "Lección posterior <span aria-hidden=\"true\">&rarr;</span>".html_safe, course_lesson_path(@course, @lesson.next)%></li>
		<% else %>
			<li class="next disabled"><a href="">Lección posterior <span aria-hidden="true">&rarr;</span></a></li>
		<%end%>
	</ul>
	<article>
		<%if logged_in?%>
			<%if current_user.admin?%>
				<%= link_to "Editar lección", edit_course_lesson_path(@course, @lesson), class: "btn btn-primary" %>
				<%= link_to "Borrar lección", course_lesson_path, method: :delete, class: "btn btn-danger", data: { confirm: '¿Seguro que quieres borrar la leccion?' } %>
			<%end%>
		<%end%>
		<header>
			<h1><%= @lesson.name %></h1>
			<p><span class="label label-default">Nueva</span> <span class="label label-primary">Introductoria</span></p>
		</header>
		<%= @lesson.content.html_safe%>
	</article>
</div>
